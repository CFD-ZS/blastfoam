FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields (alpha.c4);
maxRefinement 7;
nBufferLayers 10;

defaultFieldValues
(
    volScalarFieldValue alpha.c4    0
    volVectorFieldValue U (0 0 0)
);


regions
(
    cylinderToCell // Use cylinder for 3D
    {
        p1 (0 0 0);
        p2 (0 0 1);
        radius 0.1;
        backup
        {
            p1 (0 0 0);
            p2 (0 0 1);
            radius 0.5;
        }
        refineInternal yes;

        fieldValues
        (
            volScalarFieldValue alpha.c4    1
        );
    }
    cylinderToCell // Use cylinder for 3D
    {
        p1 (0 0.1 0);
        p2 (0 0.1 1);
        radius 0.01;
        backup
        {
            p1 (0 0 0);
            p2 (0 0 1);
            radius 0.5;
        }
        refineInternal yes;

        fieldValues
        (
            volVectorFieldValue U   (0 -90 0)
        );
    }
);


// ************************************************************************* //
